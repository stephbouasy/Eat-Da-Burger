<h1>Burger Bite!</h1>

<h2>Take a bite of a Burger!</h2>

<ul>
    {{#each burgers}}
    {{#unless bite}}
    {{> burgers/burger-block bite=true}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Yummy Burgers</h2>

<ul>
    {{#each burgers}}
    {{#if bite}}
    {{> burgers/burger-block bite=false}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Type of Burger:</label>
        <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
        <label for="slee">Take a bite?</label><br>
        <input type="radio" name="bite" value="1" checked> Bitten<br>
        <input type="radio" name="bite" value="0"> Eaten
    </div>

    <button type="submit">Add Burger</button>
</form>